<BODY>
<CENTER>
<h3>Modify Room Data for '@RoomID@'.</H3>
<P><FONT COLOR=RED><H1>@RequestParameter?ERRMSG@</H1></FONT>
<BR>
<FORM NAME=AREAEDIT TARGET=_top METHOD=GET ACTION="/grinder/editroomdone.cmvp">
<INPUT TYPE=HIDDEN NAME=AUTH VALUE="@Authenticate?AUTH@">
<INPUT TYPE=HIDDEN NAME=ROOM VALUE="@RoomID@">
<INPUT TYPE=HIDDEN NAME=AREA VALUE="@AreaName@">
<INPUT TYPE=HIDDEN NAME=ITEM VALUE="">
<INPUT TYPE=HIDDEN NAME=MOB VALUE="">
<INPUT TYPE=HIDDEN NAME=ACTION VALUE="MODIFYROOM">
<TABLE WIDTH=600 BORDER=1 CELLSPACING=0 CELLPADDIN=0>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>Room Class:</B></FONT></TD>
    <TD WIDTH=500 COLSPAN=2>
	<SELECT NAME=CLASSES>
	@RoomData?CLASSES@
	</SELECT>
	</TD>
</TR>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>Room Title:</B></FONT></TD>
    <TD WIDTH=500 COLSPAN=2><INPUT TYPE=TEXT NAME=NAME SIZE=60 VALUE="@RoomData?NAME@"></TD>
</TR>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>Description:</B></FONT></TD>
    <TD WIDTH=500 COLSPAN=2>
    <TEXTAREA NAME=DESCRIPTION ROWS=5 COLS=60>@RoomData?DESCRIPTION@</TEXTAREA>
    </TD>
</TR>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>Behaviors:</B></FONT>
	<BR><A target=HELP HREF="/archonables.cmvp"><FONT COLOR=WHITE><I>help</I></FONT></a></TD>
    <TD WIDTH=500 COLSPAN=2>
	@RoomData?BEHAVIORS@
	</TD>
</TR>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>Affects:</B></FONT>
	<BR><A target=HELP href="/archonables.cmvp"><FONT COLOR=WHITE><I>help</I></FONT></a></TD>
    <TD WIDTH=500 COLSPAN=2>
	@RoomData?AFFECTS@
	</TD>
</TR>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>MOBs:</B></FONT></TD>
    <TD WIDTH=500 COLSPAN=2>
    @RoomData?MOBLIST@
    </TD>
</TR>
<TR>
	<TD WIDTH=100><FONT COLOR="#66FFFF"><B>Items:</B></FONT></TD>
    <TD WIDTH=500 COLSPAN=2>
    @RoomData?ITEMLIST@
    </TD>
</TR>
<TR>
    <TD WIDTH=600 COLSPAN=3 ALIGN=CENTER>
	<INPUT TYPE=SUBMIT VALUE="Submit">
	</CENTER>
	</TD>
</TR>
