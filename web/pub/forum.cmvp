<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<html>
<head>
	<link rel="coffeemud icon" href="images/coffeemud.ico" >
	<!-- tell spiders to sod off -->
	<meta name="ROBOTS" content="NOINDEX, NOFOLLOW">
	<link rel="STYLESHEET" TYPE="TEXT/CSS" HREF="coffeemud.css">
	<title>Forums</title>
	<script language=JavaScript>
	<!--
		function DoMessage(which)
		{
			alert('Not yet implemented')
		}
		function NewMessage(which)
		{
			document.FORUM.action="forumnew.cmvp";
			document.FORUM.submit();
		}
	//-->
	</SCRIPT>
</head>

<body>
<FORM NAME=FORUM TARGET=_top METHOD=POST ACTION="forum.cmvp">
<INPUT TYPE=HIDDEN NAME=AUTH VALUE="@Authenticate?AUTH@">
<INPUT TYPE=HIDDEN NAME=JOURNAL VALUE="@RequestParameter?JOURNAL@">
<TABLE WIDTH=100% BORDER=0 CELLSPACING=1 CELLPADDING=1>
<TR BGCOLOR=WHITE HEIGHT=10>
	<TD COLSPAN=6>
		<TABLE WIDTH=100% BORDER=0 CELLSPACING=3 CELLPADDING=3>
		<TR VALIGN=CENTER HEIGHT=15>
			<TD WIDTH=100px BGCOLOR=BLACK VALIGN=CENTER HEIGHT=15 ONCLICK="javascript:NewMessage('')">
			<a href="javascript:NewMessage('')" style="text-decoration:none">
				<FONT COLOR=WHITE SIZE=-1>
				&nbsp;<IMG BORDER=0 WIDTH=12 HEIGHT=12 SRC=images/docbulb.jpg>&nbsp;&nbsp;<B>New Thread</B>
				</FONT>
			</a>
			</TD>
			<TD ALIGN=RIGHT><FONT COLOR=WHITE SIZE=-1>&nbsp;</FONT>
			</TD>
		</TR>
		</TABLE>
	</TD>
</TR>
<TR BGCOLOR=BLACK HEIGHT=20>
	<TD COLSPAN=6><FONT COLOR=WHITE SIZE=-1><B>Threads in Forum : @JournalName@</B></FONT></TD>
</TR>
<TR BGCOLOR=BLACK HEIGHT=20>
	<TD COLSPAN=2>&nbsp;</TD>
	<TD><FONT COLOR=WHITE SIZE=-1><B>Thread</B></FONT></TD>
	<TD WIDTH=180px ALIGN=CENTER><FONT COLOR=WHITE SIZE=-1><B>Last Post</B></FONT></TD>
	<TD WIDTH=60px ALIGN=CENTER><FONT COLOR=WHITE SIZE=-1><B>Replies</B></FONT></TD>
	<TD WIDTH=60px ALIGN=CENTER><FONT COLOR=WHITE SIZE=-1><B>Views</B></FONT></TD>
</TR>
@JournalMessageNext?RESET@
@loop@
	@JournalMessageNext@
	<TR> 
	<TD WIDTH=40px VALIGN=CENTER ALIGN=CENTER BGCOLOR=LIGHTGREY>
		<IMG WIDTH=30 HEIGHT=30 SRC=@JournalInfo?MSGTYPEICON@>
	</TD>
	<TD WIDTH=40px VALIGN=CENTER ALIGN=CENTER BGCOLOR=LIGHTBLUE>
		@if?!CheckReqParm?MSGICON=@
			<IMG WIDTH=30 HEIGHT=30 SRC=@JournalInfo?MSGICON@>
		@endif@
	</TD>
	<TD BGCOLOR=LIGHTGREY>
	<a href="javascript:DoMessage('@JournalInfo?KEY@');"><B><FONT COLOR=BLACK>@JournalInfo?SUBJECT@</FONT></B></a><BR>
		<FONT COLOR=BLACK SIZE=-2>@JournalInfo?FROM@</FONT>
	</TD>
	<TD WIDTH=180px VALIGN=CENTER BGCOLOR=LIGHTBLUE>
		<TABLE WIDTH=100% BORDER=0 CELLSPAN=0 CELLPADDING=0>
		<TR><TD ALIGN=LEFT>
			<FONT COLOR=BLACK SIZE=-2>@JournalInfo?DATEUPDATED@</FONT>
			<FONT COLOR=DARKGREY SIZE=-2>@JournalInfo?TIMEUPDATED@</FONT>
			</TD>
		</TR><TR><TD ALIGN=RIGHT>
			<FONT COLOR=BLACK SIZE=-2>by @JournalInfo?FROM@</FONT>
			</TD>
		</TR>
	</TD>
	<TD WIDTH=60px VALIGN=CENTER ALIGN=CENTER BGCOLOR=LIGHTGREY><FONT COLOR=BLACK SIZE=-1>@JournalInfo?REPLIES@</FONT></TD>
	<TD WIDTH=60px VALIGN=CENTER ALIGN=CENTER BGCOLOR=LIGHTBLUE><FONT COLOR=BLACK SIZE=-1>@JournalInfo?VIEWS@</FONT></TD>
	</TR>
@back@
</TABLE>
</FORM>
</body>
</html>