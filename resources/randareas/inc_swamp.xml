	<STRING pickweight=2 define="_swamp_path_roomtype=1">$swamp_path_prefix $_swamp_path_type</STRING>
	<STRING pickweight=2 define="_swamp_path_roomtype=0">$swamp_path_prefix $swamp_nouns</STRING>
