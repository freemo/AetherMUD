<!--  include file full of rocky-specific tags -->

<ROOM id="rocky_street_rooms">
	<ROOM class="Mountains" id="rocky_street_room" condition="$theme='mountains' or $theme='random'">
		<TITLE>(a(n)) $_rocky_path_name</TITLE>
		<DESCRIPTION>$rocky_street_desc</DESCRIPTION>
		<STRING id="rocky_street_desc" select="all">
			<STRING select="any-1" action="PREPEND">
				<STRING condition="$_rocky_path_roomtype=1">You are working your way along (a(n)) ${l:_rocky_path_name}. </STRING>
				<STRING condition="$_rocky_path_roomtype=1">You are on (a(n)) ${l:_rocky_path_name}. </STRING>
				<STRING condition="$_rocky_path_roomtype=1">The ${l:_rocky_path_name} goes through the $rocky_nouns. </STRING>
				<STRING condition="$_rocky_path_roomtype=1">(A(n)) ${l:_rocky_path_name} runs through the $rocky_nouns. </STRING>
				<STRING condition="$_rocky_path_roomtype=1">You are making your way through (a(n)) ${l:_rocky_path_name}. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">You are lost in the ${l:_rocky_path_name}. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">You are deep in the ${l:_rocky_path_name}. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">The ${l:_rocky_path_name} surrounds you. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">The ${l:_rocky_path_name} is all around you. </STRING>
			</STRING>
			<STRING select="any-1" action="APPEND">
				<STRING condition="$_rocky_path_roomtype=1">The $_rocky_path_type is dotted by $adj_sparse trees and plants.</STRING>
				<STRING condition="$_rocky_path_roomtype=1">${c:noun_tracks} in the $adj_hard_rockys ground make the $_rocky_path_type easier to follow here. </STRING>
				<STRING condition="$_rocky_path_roomtype=1">${c:adj_phys_size_tall} stone formations curve around the $_rocky_path_type like a wall. </STRING>
				<STRING condition="$_rocky_path_roomtype=1">The plant life here is $adj_sparse enough to make the $_rocky_path_type desolate and dead. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">The peaks of $areaname are $adj_phys_size_large, cliffs rising in $adj_impassable walls. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">You $verb_rocky_tread your way through the $noun_rocky_brush of the $adj_sparse mountains. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">The mountains surrounds you, $adj_sparse $adj_hard_rockys terrain making some directions $adj_impassable. </STRING>
				<STRING condition="$_rocky_path_roomtype=0">You feel a $noun_rocky_wind blow around the $adj_sparse evergreens of the mountains. </STRING>
			</STRING>
			<STRING select="any-1" action="APPEND">
				<STRING condition="$_rocky_path_roomtype=1">The $_rocky_path_type continues $roomrun_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=1">Beneath the shadows of the peaks you can see the $_rocky_path_type running $roomrun_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=1">The $_rocky_path_type runs $roomrun_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=1">The faint $_rocky_path_type goes $roomrun_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=0">It looks like you might pick your way $roomexits_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=0">Openings in the $adj_sparse $noun_rocky_brush can be seen $roomexits_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=0">You can $verb_rocky_tread on through $roomexits_desc_long.</STRING>
				<STRING condition="$_rocky_path_roomtype=0">You can continue $roomexits_desc_long.</STRING>
			</STRING>
		</STRING>
		<EXIT class="Open" />
		<MOB condition="1?2=1" select="any-1" insert="rocky_mobs" />
	</ROOM>
</ROOM>

<ROOM id="rocky_interior_rooms">
	<ROOM class="Mountains" like="rocky_street_room" condition="$theme='mountains' or $theme='random'" />
</ROOM>

<ROOM id="rocky_leaf_rooms">
	<ROOM class="Mountains" id="rocky_interior_room" condition="$theme='mountains' or $theme='random'">
		<TITLE>
			<TITLE>$rocky_path_prefix $rocky_nouns</TITLE>
		</TITLE>
		<DESCRIPTION>$rocky_interior_desc</DESCRIPTION>
		<STRING id="rocky_interior_desc" select="all">
			<STRING select="any-1" action="PREPEND">
				<STRING>You find yourself by a $adj_sparse copse of evergreens in the ${l:room_title}. </STRING>
				<STRING>You are in a corner of the ${l:room_title}. </STRING>
				<STRING>The ${rocky_nouns} surrounds you. </STRING>
				<STRING>The ${rocky_nouns} is all around you. </STRING>
			</STRING>
			<STRING select="any-1" action="APPEND">
				<STRING>The $adj_large peaks of $areaname are all around you in $adj_impassable walls. </STRING>
				<STRING>You $verb_rocky_tread your way through the $noun_rocky_brush of the ${rocky_nouns}. </STRING>
				<STRING>The mountains surrounds you, ${adj_phys_size_tall} cliffs making some directions $adj_impassable. </STRING>
				<STRING>You feel a $noun_rocky_wind blow over the $adj_phys_size_tall peaks. </STRING>
			</STRING>
			<STRING select="any-1" action="APPEND">
				<STRING>It looks like you might pick your way $roomexits_desc_long.</STRING>
				<STRING>Openings in the $noun_rocky_brush can be seen $roomexits_desc_long.</STRING>
				<STRING>You can $verb_rocky_tread on through $roomexits_desc_long.</STRING>
				<STRING>You can continue $roomexits_desc_long.</STRING>
			</STRING>
		</STRING>
		<EXIT class="Open" />
		<MOB condition="$__defined_rocky_giant&lt;1" define="__defined_rocky_giant+=1" like="rocky_giant_mob" />
		<MOB condition="1?2=1" select="any-1" insert="rocky_mobs" />
		<ITEM condition="1?4=1" select="any-1">
			<ITEM class="GenContainer" name="A $adj_wooden_ragged chest" display="$item_name is here" HASLID="true" HASLOCK="false">
				<CONTENT>
					<ITEM select="any-5" insert="dungeon_treasure_items" />
				</CONTENT>
				<AFFECT class="Prop_Hidden" />
			</ITEM>
		</ITEM>
	</ROOM>
</ROOM>
	
<MOB class="GenMob" level="$level_range" id="rocky_giant_mob" race="Giant" gender="$anygender">
	<NAME select="all">
		<NAME condition="$mob_level<10">a toddler storm giant</NAME>
		<NAME condition="$mob_level<20 and $mob_level>=10">a very young storm giant</NAME>
		<NAME condition="$mob_level<30 and $mob_level>=20">a young storm giant</NAME>
		<NAME condition="$mob_level<40 and $mob_level>=30">a subadult storm giant</NAME>
		<NAME condition="$mob_level<70 and $mob_level>=40">an adult storm giant</NAME>
		<NAME condition="$mob_level<80 and $mob_level>=70">a great storm giant</NAME>
		<NAME condition="$mob_level<85 and $mob_level>=80">an enormous storm giant</NAME>
		<NAME condition="$mob_level>=85">a monstrous storm giant</NAME>
	</NAME>
	<DISPLAY select="pick-1">
		<DISPLAY pickweight="1">$mob_name towers over you.</DISPLAY>
		<DISPLAY pickweight="1">$mob_name is watching you.</DISPLAY>
		<DISPLAY pickweight="5">$mob_name is here.</DISPLAY>
	</DISPLAY>
	<DESCRIPTION>$mob_name strikes terror in your soul.</DESCRIPTION>
	<BEHAVIOR select="all">
		<BEHAVIOR class="CombatAbilities" parms="" />
		<BEHAVIOR class="ObjectGuardian" parms="" />
	</BEHAVIOR>
	<AFFECT class="Spell_ResistCold" parms="" />
	<ABILITY select="all">
		<ABILITY condition="$mob_level>=10" class="Spell_Frost" parms="" />
		<ABILITY condition="$mob_level>=20" class="Chant_SummonRain" parms="" />
		<ABILITY condition="$mob_level>=30" class="Spell_Lightning" parms="" />
		<ABILITY condition="$mob_level>=40" class="Chant_Boulderbash" parms="" />
		<ABILITY condition="$mob_level>=50" class="Spell_ChainLightening" parms="" />
		<ABILITY condition="$mob_level>=60" class="Chant_FeelCold" parms="" />
		<ABILITY condition="$mob_level>=70" class="Chant_SummonTornado" parms="" />
		<ABILITY condition="$mob_level>=80" class="Chant_SummonRockGolem" parms="" />
		<ABILITY condition="$mob_level>=90" class="Chant_FeelElectricity" parms="" />
	</ABILITY>
</MOB>

<MOB id="rocky_mob" select="any-1" requires="level_range=int,aggrochance=int">
	<MOB id="rocky_mobs" select="all" requires="level_range=int,aggrochance=int">
        <MOB class="genmob" copyof="Hornet" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
        <MOB class="genmob" copyof="Spider" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
        <MOB class="genmob" copyof="Bee" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Lizard" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Rat" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Rabbit" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Deer" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="BlackBear" level="$level_range" gender="$anygender"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
        <MOB class="genmob" copyof="Goat" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Goat" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Vulture" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Falcon" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
        <MOB class="genmob" copyof="WildEagle" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="HillGiant" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
        <MOB class="genmob" copyof="MountainLion" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
        <MOB class="genmob" copyof="Sheep" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /></MOB>
        <MOB class="genmob" copyof="Coyote" level="$level_range"><BEHAVIOR CLASS="Mobile" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR CLASS="BrotherHelper" /><BEHAVIOR condition="1?100&lt;$aggrochance"  class="Aggressive" parms="" /></MOB>
	</MOB>
</MOB>

