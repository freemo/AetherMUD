<STRING id="_rocky_path_name" select="any-1" define="_rocky_path_name">
	<STRING pickweight=2 define="_rocky_path_roomtype=1">$rocky_path_prefix $_rocky_path_type</STRING>
	<STRING pickweight=2 define="_rocky_path_roomtype=0">$rocky_path_prefix $rocky_nouns</STRING>
	<STRING pickweight=1 define="_rocky_path_roomtype=1">$adj_creepywords $rocky_path_prefix $_rocky_path_type</STRING>
	<STRING pickweight=1 define="_rocky_path_roomtype=0">$adj_creepywords $rocky_path_prefix $rocky_nouns</STRING>
</STRING>

<STRING id="rocky_path_prefix" select="any-1">
