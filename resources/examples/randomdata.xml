<VALUE condition="$ROOMTAG_NODERUN='nesw'">northeast-southwest</VALUE>
<VALUE condition="$ROOMTAG_NODERUN=''">winding</VALUE>
</STRING>

<STRING tag="a_streetprefix" select="any-1">
<VALUE condition="'tee' IN $ROOMTAG_NODEFLAGS">T-Intersection in a</VALUE>
