<AREADATA>
<AREA id="maze_dungeon" layout="MazeLayout" requires="areaname=$,areasize=int,level_range=int,aggrochance=int,theme=prison;rats;kobolds;random">
	<AUTHOR></AUTHOR>
	<DESCRIPTION></DESCRIPTION>
	<SIZE>$areasize</SIZE>
	<NAME>$areaname</NAME>
	<ROOM id="dungeon_rooms" insert="$dungeon_hallways,$dungeon_interior,$dungeon_leaf,$dungeon_offleaf" />
</AREA>

<ROOM id="dungeon_hallways" select="any-1" condition="$roomtag_nodetype='street' or $roomtag_nodetype='surround'">
	<ROOM class="CaveRoom" include="dungeon_mobs,dungeon_items">
		<TITLE>$a_streetprefix $dungeon_hallways_street_name</TITLE>
		<DESCRIPTION>$dungeon_hallways_street_desc</DESCRIPTION>
		<EXIT class="Open" />
		<MOB condition="1?5=1" select="any-1" include="dungeon_mobs" />
		<!-- TODO: Trap! -->
	</ROOM>
	<ROOM class="CaveRoom" condition="1?10 &lt;= 2"  include="dungeon_mobs,dungeon_items">
		<TITLE>$a_streetprefix $dungeon_crawlways_street_name</TITLE>
		<DESCRIPTION>$dungeon_crawlways_street_desc</DESCRIPTION>
		<AFFECT class="Prop_Crawlspace" parms="" />
		<EXIT class="Open" />
	</ROOM>
</ROOM>

<ROOM id="dungeon_interior" select="any-1" condition="$roomtag_nodetype='interior' or $roomtag_nodetype='square'">
	<ROOM class="CaveRoom" condition="" include="dungeon_mobs,dungeon_items">
		<TITLE>$a_streetprefix $dungeon_hallways_street_name</TITLE>
		<DESCRIPTION>$dungeon_interior_desc</DESCRIPTION>
		<EXIT class="Open" />
		<MOB condition="1?3=1" select="any-1" include="dungeon_mobs" />
		<!-- TODO: Trap! -->
	</ROOM>
</ROOM>

