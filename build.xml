<project name="CoffeeMud" default="make" basedir=".">
    <description>
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="com"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="make" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" fork="yes" memoryInitialSize="512M" memoryMaximumSize="512M" destdir="${build}"/>
  </target>

  <target name="deploy" depends="make"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the CoffeeMUD-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/CoffeeMUD-${DSTAMP}.jar" basedir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
